<group name="authentication">
  <rule id="100001" level="10">
    <decoded_as>syslog</decoded_as>
    <match>
      <field name="tag">auth</field>
      <field name="message">.*failed.*</field>
    </match>
    <options>no_full_log</options>
    <frequency>10</frequency>
    <timeframe>600</timeframe>
    <active-response>
      <command>run-script</command>
      <location>/var/ossec/active-response/bin/block-ip.sh</location>
      <parameters>src_ip</parameters>
    </active-response>
  </rule>

    <rule id="100002" level="10">
    <decoded_as>syslog</decoded_as>
    <field name="tag">sudo</field>
    <match>(?:\S+\s+)?command not allowed | incorrect password attempts </match>
    <frequency>10</frequency>
    <timeframe>3600</timeframe>
    <alert_by_email>yes</alert_by_email>
    <active-response>
      <command>run-script</command>
      <command>/path/to/block_ip.sh</command>
      <parameters>{1}</parameters>
    </active-response>
  </rule>


